<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        {% block stylesheets %}{% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light px-4 border-bottom">
        <div class="container-fluid">
            {# 1. Bouton Retour #}
            {% if app.request.get('_route') != 'app_home' %}
                <a href="{{ path('app_home') }}" class="btn btn-secondary me-3">← Retour</a>
            {% endif %}

            <div class="navbar-nav me-auto">
                {% if is_granted('ROLE_USER') %}
                    <a class="nav-link btn btn-outline-primary px-3" href="{{ path('app_article_new') }}">
                        + Ajouter un article
                    </a>
                {% endif %}
            </div>

            <div class="d-flex align-items-center">
                {# 3. Connexion / Déconnexion #}
                {% if app.user %}
                    <div class="d-flex align-items-center me-3">
                        {# Avatar avec repli sur ui-avatars si vide #}
                        <img src="{{ app.user.avatar|default('https://ui-avatars.com/api/?name=' ~ app.user.username|url_encode) }}" 
                             alt="Avatar" 
                             class="rounded-circle me-2 border" 
                             style="width: 38px; height: 38px; object-fit: cover;">

                        <div class="d-flex flex-column justify-content-center">
                            <span class="fw-bold text-dark lh-1 mb-1" style="font-size: 0.9rem;">
                                {{ app.user.username }}
                            </span>
                            <span class="badge {{ 'ROLE_ADMIN' in app.user.roles ? 'bg-danger' : 'bg-info' }}" style="font-size: 0.65rem;">
                                {{ 'ROLE_ADMIN' in app.user.roles ? 'Admin' : 'Utilisateur' }}
                            </span>
                        </div>
                    </div>
                    <a href="{{ path('app_logout') }}" class="btn btn-outline-danger btn-sm">Déconnexion</a>
                {% else %}
                    <a href="{{ path('app_login') }}" class="btn btn-primary btn-sm me-2">Connexion</a>
                    <a href="{{ path('app_register') }}" class="btn btn-outline-primary btn-sm">S'inscrire</a>
                {% endif %}
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        {# Flash messages #}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        {# Le contenu de tes pages #}
        {% block body %}{% endblock %}
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>