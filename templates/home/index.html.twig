{% extends 'base.html.twig' %}

{% block title %}Accueil - Liste des Articles{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2">Derniers Articles</h1>
</div>

<div class="row">
    {% for article in articles %}
        {# 1. On d√©finit la couleur (celle de la cat√©gorie ou un gris par d√©faut) #}
        {% set catColor = article.category and article.category.color ? article.category.color : '#6c757d' %}
        
        <div class="col-md-4 mb-4">
            {# 2. Application de la couleur sur la bordure haute et l'ombre #}
            <div class="card h-100 border-0 shadow-sm" 
                 style="border-top: 4px solid {{ catColor }} !important; 
                        box-shadow: 0 10px 20px {{ catColor }}22 !important;">
                
                <div class="card-body d-flex flex-column">
                    {# 3. Le titre prend aussi la couleur pour plus de rappel #}
                    <h5 class="card-title fw-bold" style="color: {{ catColor }};">{{ article.titre }}</h5>
                    
                    <div class="text-muted mb-2" style="font-size: 0.8rem;">
                        üìÖ {{ article.createdAt ? article.createdAt|date('d/m/Y') : 'Date non d√©finie' }}
                        <p class="mt-2">
                        {% if article.category %}
                            {# 4. Le badge utilise la couleur de fond dynamique #}
                            <a href="{{ path('app_category_show', {'id': article.category.id}) }}" 
                               class="badge text-decoration-none position-relative" 
                               style="z-index: 2; background-color: {{ catColor }}; color: #fff;">
                                {{ article.category.titre }}
                            </a>
                        {% else %}
                            <span class="badge bg-secondary">Sans cat√©gorie</span>
                        {% endif %}
                        </p>
                    </div>

                    <p class="card-text text-muted">
                        {{ article.contenu|purify|raw|slice(0, 100) ~ '...' }}
                    </p>
                    
                    <a href="{{ path('app_article_show', {'id': article.id}) }}" class="stretched-link mt-auto">Lire la suite</a>
                </div>

                <div class="card-footer bg-white border-top-0 pb-3">
                    <hr class="my-2">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            {% if article.author %}
                                <img src="{{ article.author.avatar|default('https://ui-avatars.com/api/?name=' ~ article.author.username|url_encode) }}" 
                                     alt="Avatar" 
                                     class="rounded-circle me-2" 
                                     style="width: 30px; height: 30px; object-fit: cover; border: 1px solid #eee;">
                                
                                <span class="small fw-bold text-dark">
                                    {{ article.author.username }}
                                </span>
                            {% else %}
                                <span class="small text-muted italic">Auteur anonyme</span>
                            {% endif %}
                        </div>

                        <div class="btn-group">
                            {% if is_granted('EDIT', article) %}
                                <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-sm btn-outline-secondary border-0" style="position: relative; z-index: 2;">
                                    ‚úèÔ∏è
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="col-12">
            <div class="alert alert-info">Aucun article n'a √©t√© publi√© pour le moment.</div>
        </div>
    {% endfor %}
</div>
{% endblock %}