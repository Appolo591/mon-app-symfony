{% extends 'base.html.twig' %}

{% block title %}{{ article.titre }}{% endblock %}

{% block body %}

    <div class="row justify-content-center">
        <div class="col-md-8">
            <article>
                <h1 class="mt-4">{{ article.titre }}</h1>
                <hr>
                <div class="mt-4">
                    <p class="lead" style="white-space: pre-wrap;">{{ article.contenu }}</p>
                </div>
                <hr>

                <hr class="my-5">

                <h3>ðŸ’¬ Commentaires ({{ article.comments|length }})</h3>

                {# Affichage de la liste des commentaires #}
                <div class="mb-5">
                    {% for comment in article.comments %}
                        <div class="card mb-3 border-0 shadow-sm">
                            <div class="card-body">
                                <div class="d-flex align-items-center p-2">
                                    <img src="{{ comment.author.avatar|default('https://ui-avatars.com/api/?name=' ~ comment.author.username) }}" 
                                        class="rounded-circle me-2" style="width: 30px; height: 30px; object-fit: cover;">
                                    <strong>{{ comment.author.username }}</strong>
                                    <small class="text-muted p-2">le {{ comment.createdAt|date('d/m/Y Ã  H:i') }}</small>
                                    {# On n'affiche le bouton que si l'utilisateur est l'auteur #}
                                    {% if app.user == comment.author or is_granted('ROLE_ADMIN')%}
                                        <a href="{{ path('app_comment_delete', {'id': comment.id}) }}" 
                                        class="btn btn-sm btn-outline-danger justify-content-end"
                                        onclick="return confirm('Voulez-vous vraiment supprimer ce commentaire ?')">
                                        Supprimer
                                        </a>
                                    {% endif %}
                                </div>
                                <p class="mb-0">{{ comment.content }}</p>
                            </div>
                        </div>
                    {% else %}
                        <p class="text-muted">Soyez le premier Ã  laisser un commentaire !</p>
                    {% endfor %}
                </div>

                {# Formulaire de commentaire (seulement si connectÃ©) #}
                <div class="bg-light p-4 rounded shadow-sm">
                    <h4>Laisser un message</h4>
                    {% if app.user %}
                        {{ form_start(commentForm) }}
                            {{ form_row(commentForm.content) }}
                            <button type="submit" class="btn btn-primary mt-2">Envoyer</button>
                        {{ form_end(commentForm) }}
                    {% else %}
                        <p class="mb-0">
                            <a href="{{ path('app_login') }}">Connectez-vous</a> pour commenter.
                        </p>
                    {% endif %}
                </div>

                {% if is_granted('EDIT', article) %}
                <div class="d-flex justify-content-between">
                    <a href="{{ path('app_article_delete', {'id': article.id}) }}" 
                    class="btn btn-danger" 
                    onclick="return confirm('Es-tu sÃ»r de vouloir supprimer cet article ?')">
                    Supprimer l'article
                    </a>
                </div>
                {% endif %}
            </article>
        </div>
    </div>
{% endblock %}