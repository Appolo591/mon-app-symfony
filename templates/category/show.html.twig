{% extends 'base.html.twig' %}

{% block title %}Articles de la catégorie {{ category.titre }}{% endblock %}

{% block body %}
    <h1>Catégorie : {{ category.titre }}</h1>
    <hr>

    <div class="row">
        {% for article in articles %}
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ article.titre }}</h5>
                        <p class="card-text">{{ article.contenu|striptags|slice(0, 100) }}...</p>
                        <a href="{{ path('app_article_show', {'id': article.id}) }}" class="btn btn-primary">Lire la suite</a>
                    </div>
                </div>
            </div>
        {% else %}
            <p>Aucun article dans cette catégorie pour le moment.</p>
        {% endfor %}
    </div>
    
    <a href="{{ path('app_home') }}">Retour à la liste</a>
{% endblock %}
